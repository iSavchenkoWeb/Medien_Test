{% extends "FOSUserBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}
 
{% if error %}
   <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<style>
	.logotype{
		width: 100%;
		height: 130px;
		background: transparent url({{ asset('img/rundschaumedien.ch_b.png') }}) center no-repeat;
	}
</style>
<div class='row'>
	<div class='col-sm-3'>
	</div>
	<div class='col-sm-6'>
		<div class='logotype'></div>
		<form action="{{ path("fos_user_security_check") }}" method="post">
		   	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			<div class="formgroup">
			   <label for="username">{{ 'security.login.username'|trans }}</label>
			   <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
			</div>
		 
			<div class="formgroup">
			   <label for="password">{{ 'security.login.password'|trans }}</label>
			   <input class="form-control" type="password" id="password" name="_password" required="required" />
			<div>
		 
			<div class="checkbox" style='margin-left: 5px;'>
			   <input type="checkbox" id="remember_me" name="_remember_me" value="on" style='margin-left: -5px;'/>
			   <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
			</div>
	 
		   <input class="btn btn-success" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
		   <a class="btn btn-info" href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans }}</a>
		</form>
	</div>
</div>
 
{% endblock fos_user_content %}